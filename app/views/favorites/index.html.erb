<section class="pets-applied-for" style="float:left">
  <h2>Applications Pending For:</h2>
  <% @pets_with_applications.each do |pet| %>
    <p style="display:inline">-<%= link_to pet.name, "/pets/#{pet.id}", method: :get%>-</p>
  <% end %>
</section>

<h1>Favorite Pets</h1>

<% if favorites_list.empty? %>
  <h1>You have no favorite pets :(</h1>
<% else %>

  <section class="favorites-links">
    <section class="adopt-pets">
      <%= link_to 'Adopt Pets', '/adoption_apps/new', method: :get %>
    </section>
    <section class="delete-all">
      <%= link_to 'Remove All Favorited Pets', '/favorites', method: :delete%>
    </section>
  </section>

  <section class="list">
    <% @favorite_pets.each do |pet| %>
      <section id="favorite-<%= pet.id %>">
        <section class="favorite-img">
          <%= image_tag pet.image_url %>
        </section>
        <section class="favorite-info">
          <p><%= link_to pet.name, "/pets/#{pet.id}" %></p>
          <p><%= link_to "Un-Favorite Pet", "/favorites/#{pet.id}", method: :delete %></p>
        </section>

      </section>
    <% end %>
  </section>
<% end %>
