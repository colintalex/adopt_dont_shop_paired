<h1>Adoption Application Show Page</h1>

<section class="app-info">
  <p><%= @pet_app.name %></p>
  <p><%= @pet_app.address %></p>
  <p><%= @pet_app.city %></p>
  <p><%= @pet_app.state %></p>
  <p><%= @pet_app.zip %></p>
  <p><%= @pet_app.phone_number %></p>
  <p><%= @pet_app.description %></p>
</section>
<section class="app-pet-list">
  <% @pet_app.pets.each do |pet| %>
    <section id="app-pet-<%= pet.id %>">
      <%= link_to pet.name, "/pets/#{pet.id}" %>
      <% if pet.applicant_id == @pet_app.id.to_s %>
        <%= link_to 'Un-Approve Application', "/pets/#{pet.id}/adoption_apps", method: :delete %>
      <% elsif pet.applicant_id.nil? %>
        <%= link_to 'Approve Application', "/pets/#{pet.id}/adoption_apps/#{@pet_app.id}", method: :patch %>
      <% else %>
        <p><%= 'Another application is currently pending.' %></p>
      <% end %>
    </section>
  <% end %>
</section>
