<h1><%= @pet.name %></h1>
<section class="pet_show_container">
  <div class="pet_show_info">
    <p><%=  @pet.description %></p>
    <p><%=  @pet.approximate_age %></p>
    <p><%=  @pet.sex %></p>
    <p><%=  @pet.name %> is <%= @pet.adoption_status %></p>
  </div>
  <div class="pet_show_links">
    <p><%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %></p>
    <p><%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></p>
  </div>
  <div class="pet_show_img">
    <%= image_tag @pet.image_url, id: "petimg-#{@pet.id}" %>
  </div>
</section>
