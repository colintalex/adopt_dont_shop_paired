<h1>Edit Shelter Review</h1>
<%= form_tag "/shelters/#{@review.shelter.id}/reviews/#{@review.id}", method: :patch do%>
  <div class="field-container">
    <div class="input-field">
      <%= label_tag :title %>
      <%= text_field_tag :title, @review.title %>
    </div>
      <%= label_tag :rating %>
      <%= radio_button_tag :rating, 1, checked = @review.rating == 1 %>
      <%= label_tag :rating_1, "1" %>
      <%= radio_button_tag :rating, 2, checked = @review.rating == 2 %>
      <%= label_tag :rating_2, "2" %>
      <%= radio_button_tag :rating, 3, checked = @review.rating == 3 %>
      <%= label_tag :rating_3, "3" %>
      <%= radio_button_tag :rating, 4, checked = @review.rating == 4 %>
      <%= label_tag :rating_4, "4" %>
      <%= radio_button_tag :rating, 5, checked = @review.rating == 5 %>
      <%= label_tag :rating_5, "5" %>
    <div class="input-field">
      <%= label_tag :content %>
      <%= text_area_tag :content,@review.content, size: "120x12"%>
    </div>
    <div class="input-field">
      <%= label_tag :image_url %>
      <%= text_field_tag :image_url, @review.image_url%>
    </div>
    <div class="submit-button">
      <%= submit_tag "Submit Update" %>
    </div>
  </div>
<% end %>
